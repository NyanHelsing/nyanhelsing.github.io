{
    "files": {
        "ignore": ["node_modules", "dist", "public"]
    },
    "javascript": {
        "formatter": {
            "trailingComma": "none",
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "arrowParentheses": "always",
            "indentStyle": "space",
            "indentWidth": 4,
            "lineEnding": "lf",
            "lineWidth": 80,
            "bracketSameLine": false
        }
    },
    "json": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        }
    }
}
